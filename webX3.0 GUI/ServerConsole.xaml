<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:webX3._0"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="clr-namespace:webX3._0.Controls" x:Class="webX3._0.ServerConsole"
        mc:Ignorable="d"
        Title="webx3.0 Server Console" Height="525" Width="900" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#FF00A9DA">
    <StackPanel Height="525" Width="900">
        <TextBlock HorizontalAlignment="Center" Margin="0,-3,0,0" TextWrapping="Wrap" Text="webx3.0 Server Console" VerticalAlignment="Top" FontSize="22" FontFamily="Malgun Gothic" FontWeight="Bold"/>

        <ScrollViewer Height="491" Width="892" Background="Black" VerticalAlignment="Bottom" HorizontalAlignment="Left" CanContentScroll="True">
            <ScrollViewer.Effect>
                <DropShadowEffect/>
            </ScrollViewer.Effect>

            <StackPanel x:Name="ConGrid" HorizontalAlignment="Left" Width="875" Height="491">
                <Controls:ConsoleOpenMsg />
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
