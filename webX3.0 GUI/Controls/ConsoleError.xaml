<UserControl x:Class="webX3._0.Controls.ConsoleError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:webX3._0.Controls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="25" Width="900">
    <Grid Height="25" Width="900">
        <Grid HorizontalAlignment="Left" Height="25" Width="100" Background="#E5FF4040">
            <Grid.Effect>
                <BlurEffect/>
            </Grid.Effect>
        </Grid>

        <TextBlock HorizontalAlignment="left" TextWrapping="Wrap" Text="[Server Error]" VerticalAlignment="Center" Height="17.5" Width="95" FontFamily="Constantia" FontWeight="Bold" Margin="4,4,0,5" FontSize="14"/>

        <Grid HorizontalAlignment="Center" Height="25" Width="800" Margin="100,0,0,0">
            <TextBlock x:Name="Msgg" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Default ErrMsg Text" VerticalAlignment="Center" Height="17" Width="780" FontFamily="Constantia" Foreground="White" Margin="10,0,0,0" FontSize="14"/>
        </Grid>
    </Grid>
</UserControl>
