<UserControl x:Class="webX3._0.Controls.ConsoleMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:webX3._0.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="25" Width="900">
    <Grid Height="25" Width="900">
        <Grid HorizontalAlignment="Left" Height="25" Width="100" Background="#E50DE2EC">
            <Grid.Effect>
                <BlurEffect/>
            </Grid.Effect>
        </Grid>

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="[Console Msg]" VerticalAlignment="Center" Height="17.5" Width="101" FontFamily="Constantia" FontWeight="Bold" Margin="2,5,0,5" FontSize="14"/>

        <Grid HorizontalAlignment="Center" Height="25" Width="800" Margin="100,0,0,0">
            <TextBlock x:Name="Msgg" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Default ConMsg Text" VerticalAlignment="Center" Height="17" Width="780" FontFamily="Constantia" Foreground="White" Margin="10,0,0,0" FontSize="14"/>
        </Grid>
    </Grid>
</UserControl>
