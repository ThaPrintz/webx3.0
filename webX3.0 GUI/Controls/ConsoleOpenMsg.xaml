<UserControl x:Class="webX3._0.Controls.ConsoleOpenMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:webX3._0.Controls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="25" Width="900">
    <Grid Height="25" Width="900">
        <Grid HorizontalAlignment="Left" Height="25" Width="900" Background="SpringGreen" Margin="0">
            <Grid.Effect>
                <BlurEffect/>
            </Grid.Effect>
        </Grid>

        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="webx3.0, by Skyler Nelson. Powered by webxlib." VerticalAlignment="Center" Height="17" Width="299" FontFamily="Mongolian Baiti" Margin="0" FontSize="14" FontWeight="Bold">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="7"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
